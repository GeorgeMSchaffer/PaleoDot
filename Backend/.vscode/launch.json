    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: Backend Debug",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/net8.0/Backend.dll",
            "projectPath": "${workspaceFolder}/Backend.csproj",
            "launchSettingsFilePath": "${workspaceFolder}/Properties/launchSettings.json",
            "launchSettingsProfile": "https",
            "dotnetRunMessages": true,
            
        
        },
        {
            "type": "DotNetAutoAttach",
            "request": "launch",
            "name": ".NET Auto Attach",
            "args": [],
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "type": "DotNetWatch",
            "request": "launch",
            "name": ".NET Core Watch",
            "program": "${workspaceFolder}/Backend.csproj",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "DOTNET_WATCH_RESTART_ON_RUDE_EDIT": "true"
            }
        }
    ]
}