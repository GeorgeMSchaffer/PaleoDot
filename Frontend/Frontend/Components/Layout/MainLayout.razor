    <script src="_content/ChartJs.Blazor.Fork/ChartJsBlazorInterop.js"></script>
</head>
<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
